#!/usr/bin/env zsh

alias reload='source ~/.zshrc'
alias ..='cd ..'
alias ~="cd ~"

alias ls="ls --color=auto"
alias ll="ls -l -go"
alias la="ll -a"
alias lrth="ll -rth"
alias larth="la -rth"
alias grep="grep --color=auto"
alias lzd=lazydocker
alias pip3="python3 -m pip"
alias pip="pip3"
alias ssh="TERM=xterm-256color ssh"
