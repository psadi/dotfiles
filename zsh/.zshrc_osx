# evals
source "${ZSH_DOTFILES_DIR}/.evals"

# functions
source "${ZSH_DOTFILES_DIR}/.functions"

# Set aliases and exports based on package availability
source "${ZSH_DOTFILES_DIR}/.commands"

# aliases
source "${ZSH_DOTFILES_DIR}/.aliases"

# export
if [ -d "/Applications/Emacs.app/Contents/MacOS" ]; then
	EMACS_INSTALL_PATH="/Applications/Emacs.app/Contents/MacOS"
	export PATH="${EMACS_INSTALL_PATH}:${EMACS_INSTALL_PATH}/bin:${PATH}"
fi

export PYTHONPATH="$(brew --prefix python@3.11)"
export PYTHONUSERBASE="${HOME}/.local"
export PATH="${HOME}/.local/bin:${PYTHONPATH}/bin:${HOME}/go/bin:${HOME}/.local/lsp/jdtls/bin:${PATH}"
